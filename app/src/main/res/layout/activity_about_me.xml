<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    tools:context=".AboutMeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/top_bar_gradient"
        android:elevation="4dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Tell Us About Yourself"
            android:textColor="@color/onPrimary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingVertical="5dp"
        android:text="We will use this information to improve your recommendations."
        android:textColor="@color/onSecondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarLayout" />

    <TextView
        android:id="@+id/ageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="AGE"
        android:textColor="@color/onSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/ageChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageLabel"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTeens"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 - 17"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipYoungAdults"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 - 24"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAdults"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 - 34"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMidAdults"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35 - 49"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMature"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50+"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="GENDER"
        android:textColor="@color/onSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageChipGroup" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/genderChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderLabel"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMale"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            app:chipIconEnabled="true"
            app:chipIcon="@drawable/male_24px"
            android:textColor="@color/onSurface"
            app:chipBackgroundColor="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFemale"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIconEnabled="true"
            app:chipIcon="@drawable/female_24px"
            android:text="Female"
            android:textColor="@color/onSurface"
            app:chipBackgroundColor="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipOthers"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            app:chipIconEnabled="true"
            app:chipIcon="@drawable/transgender_24px"
            android:textColor="@color/onSurface"
            app:chipBackgroundColor="@color/chip_background_color"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/bodySizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="BODY SIZE"
        android:textColor="@color/onSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderChipGroup" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/bodySizeChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodySizeLabel"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipXS"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XS"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipS"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipM"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipL"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipXL"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XL"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPlusSize"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plus Size"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/skinToneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="SKIN TONE"
        android:textColor="@color/onSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodySizeChipGroup" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/skinToneChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:chipSpacingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skinToneLabel"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFair"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fair"
            app:chipIconEnabled="true"
            app:chipIcon="@drawable/circle_24px"
            app:chipIconTint="@color/skin_tone_fair"
            android:textColor="@color/onSurface"
            app:chipBackgroundColor="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLight"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:chipIconEnabled="true"
            app:chipIcon="@drawable/circle_24px"
            app:chipIconTint="@color/skin_tone_light"
            android:text="Light"
            android:textColor="@color/onSurface"
            app:chipBackgroundColor="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMedium"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            app:chipIconEnabled="true"
            app:chipIcon="@drawable/circle_24px"
            app:chipIconTint="@color/skin_tone_medium"
            android:textColor="@color/onSurface"
            app:chipBackgroundColor="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTan"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIconEnabled="true"
            app:chipIcon="@drawable/circle_24px"
            app:chipIconTint="@color/skin_tone_tan"
            android:text="Tan"
            android:textColor="@color/onSurface"
            app:chipBackgroundColor="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDark"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark"
            app:chipIconEnabled="true"
            app:chipIcon="@drawable/circle_24px"
            app:chipIconTint="@color/skin_tone_dark"
            android:textColor="@color/onSurface"
            app:chipBackgroundColor="@color/chip_background_color"/>

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/styleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="STYLE"
        android:textColor="@color/onSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skinToneChipGroup" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/styleChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/styleLabel"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCasual"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casual"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFormal"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formal"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBohemian"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bohemian"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipStreetwear"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streetwear"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVintage"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vintage"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipElegant"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elegant"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAthleisure"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Athleisure"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipGrunge"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grunge"
            android:textColor="@color/onSurface"
            android:background="@color/chip_background_color"/>

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tertiary"
        android:text="Save"
        android:layout_margin="30dp"
        android:textColor="@color/onSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>